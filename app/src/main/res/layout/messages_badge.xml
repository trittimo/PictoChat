<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/messages_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="@dimen/messages_icon_margin"
        android:clickable="true"
        android:src="@android:drawable/sym_action_email"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/messages_image_description"/>
    
    <TextView
        android:id="@+id/message_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/messages_badge_padding"
        android:paddingEnd="@dimen/messages_badge_right_padding"
        android:paddingRight="@dimen/messages_badge_padding"
        android:text="@string/default_messages_text"
        android:textStyle="bold"
        android:textSize="@dimen/messages_badge_text_size"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>